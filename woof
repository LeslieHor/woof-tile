#!/bin/bash

WOOF=~/Git/woof-tile/woof.py

if [[ -z "$@" ]]; then
    echo "add h
add v
maximize
min
unmin
swap
swap_pane
change_plane
kill
remove
restore
"
else
    echo $@ >> ~/log
    if [[ ${1} == "add h" ]]; then
        ${WOOF} list "add h "
    elif [[ ${1} == "add h"* ]]; then
        ARGS=$(echo ${1} | sed 's/add h //')
        ${WOOF} addrofi h $ARGS
    elif [[ ${1} == "add v" ]]; then
        ${WOOF} list "add v "
    elif [[ ${1} == "add v"* ]]; then
        ARGS=$(echo ${1} | sed 's/add v //')
        ${WOOF} addrofi v $ARGS
    elif [[ ${1} == "swap_pane" ]]; then
        ${WOOF} $@
    elif [[ ${1} == "swap" ]]; then
        WINID=$(xdotool getactivewindow)
        ${WOOF} list "swap " | grep -v ${WINID}
    elif [[ ${1} == "swap"* ]]; then
        ARGS=$(echo ${1} | sed 's/swap //')
        ${WOOF} swaprofi $ARGS
    else
        ${WOOF} $@ >> ~/log
    fi
fi